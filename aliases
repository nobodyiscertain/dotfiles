# Shell
alias mkdir='mkdir -p'
alias ll='ls -al'
alias tlf="tail -f"

# Ruby
alias b="bundle"

# Rails
alias be="bundle exec"

# Editing
alias ealiases='vim -f "$HOME/.aliases"; source "$HOME/.aliases";'
alias egit='vim "$HOME/.gitconfig"'
alias ehosts='sudo vim /etc/hosts'
alias evhosts='sudo vim -f /etc/apache2/extra/httpd-vhosts.conf; sudo apachectl restart;'

# Git Commands
alias gst='git status'
alias gs='git status --short'
alias gp='git push'
alias gpl='git pull'
alias gb='git br'
alias gba='git br -a'
alias gc='git commit'
alias grm='git ls-files -d -z | xargs -0 git update-index --remove'

# Capistrano Commands
alias cpd='cap production deploy'
alias cdb='cap production pull_db'
alias cpf='cap production pull_files'
alias cpdb='cap production db:pull'
alias cddb='cap dev db:pull'

#MySQL Commands
alias mysql:stop='mysql.server stop'
alias mysql:start='mysql.server start'

#Postgresql
alias pg:start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg:stop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'

#Apache Commands
alias ap_start='sudo apachectl start'
alias ap_stop='sudo apachectl stop'
alias ap_restart='sudo apachectl restart'

# OhEhSex
alias fdns='dscacheutil -flushcache'
alias phplog='tlf /Applications/MAMP/logs/php_error.log'
alias clearbashlog='sudo rm -rf /var/log/asl/*.asl'

# tmux
alias tml='tmux list-sessions'
alias tmk='tmux kill-server'
alias tmn='tmux new -s'
alias tma='tmux attach -t'

function msd {
  mysqldump -uroot -proot $1 | gzip > $1.sql.gz
}
