# Shell
alias mkdir='mkdir -p'
alias ll='ls -al'
alias tlf="tail -f"

# Ruby
alias s="bundle exec rspec"
alias gi="gem install"
alias giv="gem install -v"
alias b="bundle"
alias bi="b install --path .bundle --binstubs"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/bundle' >> .gitignore"
alias atf="autotest -cf"
alias atp="autotest -cfp"
alias rsp="be rake parallel:spec"

# Rails
alias rst='rails server thin'
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias migratep="bundle exec rake db:migrate parallel:prepare"
alias remigrate="rake db:migrate && rake db:migrate:redo && rake db:schema:dump db:test:prepare"
alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias ship='git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake && git push'

# Editing
alias ealiases='vim -f "$HOME/.aliases"; source "$HOME/.aliases";'
alias egit='vim "$HOME/.gitconfig"'
alias ehosts='sudo vim /etc/hosts'
alias evhosts='sudo vim -f /etc/apache2/extra/httpd-vhosts.conf; sudo apachectl restart;'

# Git Commands
alias git=hub
alias gs='git status'
alias gst='git status'
alias gp='git push'
alias gpl='git pull'
alias gb='git br'
alias gba='git br -a'
alias gc='git commit'
alias grm='git ls-files -d -z | xargs -0 git update-index --remove'

# Capistrano Commands
alias cpd='cap production deploy'
alias cdb='cap production pull_db'
alias cpf='cap production pull_files'
alias cpdb='cap production db:pull'
alias cddb='cap dev db:pull'

#MySQL Commands
alias stop_mysql='sudo launchctl unload -w /Library/LaunchDaemons/com.mysql.mysqld.plist'
alias start_mysql='sudo launchctl load -w /Library/LaunchDaemons/com.mysql.mysqld.plist'

#Apache Commands
alias ap_start='sudo apachectl start'
alias ap_stop='sudo apachectl stop'
alias ap_restart='sudo apachectl restart'

# OhEhSex
alias fdns='dscacheutil -flushcache'
alias phplog='tlf /Applications/MAMP/logs/php_error.log'
alias boner='B=========================D'

function msd {
  mysqldump -uroot -proot $1 | gzip > $1.sql.gz
}