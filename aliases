# Shell
alias mkdir='mkdir -p'
alias ll='ls -hla'
alias tlf="tail -f"

# Ruby
alias b="bundle"

# Rails
alias be="bundle exec"

# Editing
alias ealiases='vim -f "$HOME/.aliases"; source "$HOME/.aliases";'
alias egit='vim "$HOME/.gitconfig"'
alias ehosts='sudo vim /etc/hosts'
alias evhosts='sudo vim -f /etc/apache2/extra/httpd-vhosts.conf; sudo apachectl restart;'

# Git Commands
alias gst='git status'
alias gs='git status --short'
alias gp='git push'
alias gpl='git pull'
alias gb='git br'
alias gba='git br -a'
alias gc='git commit'
alias grm='git ls-files -d -z | xargs -0 git update-index --remove'
alias wip="git add . && git commit -m 'wip'"
alias nah="git reset --hard && git clean -df"

# Github
alias pst='gh pr status'
alias prv='gh pr view'

# Capistrano Commands
alias cpd='cap production deploy'
alias cdb='cap production pull_db'
alias cpf='cap production pull_files'
alias cpdb='cap production db:pull'
alias cddb='cap dev db:pull'

# MySQL Commands
alias mysql:stop='/usr/local/opt/mysql@5.7/bin/mysql.server stop'
alias mysql:start='/usr/local/opt/mysql@5.7/bin/mysql.server start'

# Postgresql
alias pg:start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg:stop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
alias pg:fix='rm /usr/local/var/postgresql\@11/postmaster.pid; brew services restart postgresql@11'

# Apache Commands
alias ap_start='sudo apachectl start'
alias ap_stop='sudo apachectl stop'
alias ap_restart='sudo apachectl restart'

# OhEhSex
alias fdns='sudo killall -HUP mDNSResponder; sleep 2; echo macOS DNS Cache Reset | say'
alias phplog='tlf /Applications/MAMP/logs/php_error.log'
alias clearbashlog='sudo rm -rf /var/log/asl/*.asl'

# tmux
alias tml='tmux list-sessions'
alias tmk='tmux kill-server'
alias tmn='tmux new -s'
alias tma='tmux attach -t'

# PHP
alias t="phpunit -v"
alias art="php artisan"

# Kajabi
alias kj:db='psql -d kajabi-portals_development'
alias kj:nr='heroku addons:open newrelic -r production'
alias kj:worker_combined='bundle exec sidekiq -C ./config/sidekiq_combined.yml'

# Nuke Processes
alias nuke_ws="lsof -t -i tcp:5000 | xargs kill"

# Webpacker
alias nuke_webpacker='be rake webpacker:clobber && yarn cache clean && yarn install && be rake webpacker:compile'

function msd {
  mysqldump -uroot -proot $1 | gzip > $1.sql.gz
}

alias bump_server="ssh -R www.dailybroic.life:80:localhost:5000 -R kajabiuniversity:80:localhost:5000 -R commodo:80:localhost:5000 serveo.net"
